<% 
    var hid = uniqid()
%>
<span id="<%= hid %>" class="<%= user.following ? 'followed' : 'unfollowed' %>">
<%- include('linkbutton', {title: 'Click to ' + (user.following ? 'unfollow' : 'follow'), msg: {cmd: (user.following ? 'unfollow' : 'follow'), args: {screenName: user.screenName, hid: hid}}}) -%>
<%= (user.following ? 'Following' : 'Not Following') %>
<%- include('linkbuttonend') -%>
</span>